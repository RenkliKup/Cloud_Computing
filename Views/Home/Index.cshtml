@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-lg-4 mt-3">
            <div class="card rounded-0">
                <h4 class="card-header">Calculate</h4>
                <div class="card-body">
                    <form>
                        <span>Nick: <input type="text" maxlength="40" class="form-control" required></span>
                        <span>Kilo: <input type="number" min="1" max="400" class="form-control" placeholder="kg giriniz." step="0.01" required></span>
                        <span>Boy: <input type="number" min="1" max="255" class="form-control" placeholder="cm giriniz." required></span>
                        <button class="btn btn-primary form-control mt-5">Calculate</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-8 mt-3">
            <div class="row">
                <div class="col-md-12">
                    <div class="card rounded-0">
                        <h4 class="card-header">Result</h4>
                        <div class="card-body">
                            ask aksmdasl askdmasmd askmdaskm askmaskm
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <div class="card rounded-0">
                        <h4 class="card-header">Table</h4>
                        <div class="card-body">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Nick</th>
                                        <th scope="col">Height</th>
                                        <th scope="col">Weight</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">1</th>
                                        <td>Mark</td>
                                        <td>Otto</td>
                                        <td>mdo</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">2</th>
                                        <td>Jacob</td>
                                        <td>Thornton</td>
                                        <td>fat</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">3</th>
                                        <td colspan="2">Larry the Bird</td>
                                        <td>twitter</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
